<resources>

    <!-- Base application theme. -->

    <!--Style of place image view. -->
    <style name="placeImageStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">200dp</item>
       <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style of place header text view. -->
    <style name="HeaderTextViewStyle">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Style of place full information text view. -->
    <style name="FullInfoTextViewStyle">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mainActivitiyHeaders">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainActivitiyContent">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
